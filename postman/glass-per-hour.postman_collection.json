									"pm.collectionVariables.set(\"roomCode\", jsonData.roomCode);",
									"pm.collectionVariables.set(\"roomId\", jsonData.roomId);",
									"console.log(\"Joined Room: \" + jsonData.roomCode + \", User ID: \" + jsonData.userId);"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
