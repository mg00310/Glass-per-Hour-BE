{
	"info": {
		"_postman_id": "glass-per-hour-id-v2",
		"name": "Glass-per-hour API (v2 - In-Memory)",
		"description": "API collection for Glass-per-hour Backend (In-Memory version)",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "1. Create User",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var jsonData = pm.response.json();",
							"pm.collectionVariables.set(\"userId\", jsonData.id);",
							"console.log(\"User Created, ID: \" + jsonData.id);"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"userName\": \"테스터\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{baseUrl}}/api/users",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"users"
					]
				}
			},
			"response": []
		},
		{
			"name": "2. Add Drink",
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"drinkType\": \"SOJU\",\n  \"glassCount\": 2\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{baseUrl}}/api/users/{{userId}}/drinks",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"users",
						"{{userId}}",
						"drinks"
					]
				}
			},
			"response": []
		},
		{
			"name": "3. Add Reaction",
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"reactionTimeMs\": 350\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{baseUrl}}/api/users/{{userId}}/reaction",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"users",
						"{{userId}}",
						"reaction"
					]
				}
			},
			"response": []
		},
		{
			"name": "4. Get Rankings",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/api/rankings",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"rankings"
					]
				}
			},
			"response": []
		},
		{
			"name": "5. Finish User",
			"request": {
				"method": "POST",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/api/users/{{userId}}/finish",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"users",
						"{{userId}}",
						"finish"
					]
				}
			},
			"response": []
		},
		{
			"name": "6. Get AI Message (Polling)",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/api/users/{{userId}}/ai-message",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"users",
						"{{userId}}",
						"ai-message"
					]
				}
			},
			"response": []
		}
	],
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:8000",
			"type": "string"
		},
		{
			"key": "userId",
			"value": "",
			"type": "string"
		}
	]
}