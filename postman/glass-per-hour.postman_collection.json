{
	"info": {
		"_postman_id": "glass-per-hour-id",
		"name": "Glass-per-Hour API",
		"description": "API collection for Glass-per-Hour Backend",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Room",
			"item": [
				{
					"name": "Create Room",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"pm.collectionVariables.set(\"roomId\", jsonData.roomId);",
									"pm.collectionVariables.set(\"roomCode\", jsonData.roomCode);",
									"pm.collectionVariables.set(\"userId\", jsonData.hostUserId);",
									"console.log(\"Room Created: \" + jsonData.roomCode + \", Host ID: \" + jsonData.hostUserId);"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"roomName\": \"\",\n  \"hostName\": \"테스트유저\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/api/rooms",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"rooms"
							]
						}
					},
					"response": []
				},
				{
